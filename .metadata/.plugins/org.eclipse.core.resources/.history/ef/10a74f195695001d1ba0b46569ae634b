
public class Array2DTest {
	public static void main(String[] args) {
		int [][] arry2 = new int[][] {
			{10, 20, 30,40, 0},
			{1, 2, 3, 4, 0},
			{100, 200, 300, 400, 0},
			{111, 222, 333, 444, 0},
			{0, 0, 0, 0, 0}
		};
		int sum1 = 0, sum2=0;
		int[] col = new int[4];
		
		for(int i=0; i<4; i++) {
			for(int j=0; j<4; j++) {
				sum1+=arry2[i][j];
				col[i]+=arry2[i][j];
			}
			arry2[i+1][i+1] = sum1;
			sum1=0;
		}
		
//		for(int i=0; i<4; i++) {
//			System.out.println("ì—´"+i+": "+col[i]);
//		}
		for(int i=0; i<4; i++) {
			for(int j=0; j<4; j++) {
				System.out.print(arry2[i][j]+"\t");
			}
			System.out.println();
			
		}
		
	}
}
